{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "name": "Attach to port",
      "port": 9229,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Node app",
      "internalConsoleOptions": "openOnSessionStart",
      "console": "internalConsole",
      "args": ["${workspaceFolder}/src/main.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "skipFiles": [
        "node_modules/**/*.js",
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
